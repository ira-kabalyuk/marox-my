extends ../template-2.pug

block title
	- title = pages.crm.title
	
block breadcrumbs
	- breadcrumbsCat = pages.crm.category
	- breadcrumbsCurrent = pages.crm.title

//- Top Section
block sectionTitles
	- h1           = pages.crm.h1
	- subTitle     = pages.crm.subTitle
	- sectionClass = pages.crm.form
	
block topSectionContent

	.container
		ul.top-section__list.crm-top-section__list
			li.top-section__item
				button.btn.btn_icon.form-group__btn Отправить заявку
			li.top-section__item.top-section__item_2
				.top-section-list__text-wrap
					h5.top-section-list__title.text-black Презентация
					a.top-section-list__link(href="") pdf, 2mb

block crmTopBlock
	.border-block_dark.crm-top-block
		.container
			ul.crm-top-block__list
				each item in pages.crm.topList
					li(class="crm-top-block__item " + item.class)
						p.crm-top-block__title #{item.title}
						p.crm-top-block__text #{item.p}

