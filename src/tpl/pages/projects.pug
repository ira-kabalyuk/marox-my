extends ../template.pug

block title
	- title = pages.projects.title
	
block breadcrumbs
	- breadcrumbsCat = pages.projects.category
	- breadcrumbsCurrent = pages.projects.title

//- Top Section
block sectionTitles
	- h1           = pages.projects.h1
	- subTitle     = pages.projects.subTitle
	- sectionClass = pages.projects.form
	
block topSectionContent
//- //Top Section

block content
	section.team-block.border-block_solid.border-block_no-bottom
		.container
			.projects
				each row in projects
					.projects__row
						each item in row
							div(class=item.grow ? "projects__item projects__item_grow" : "projects__item")
								.projects__item-container
								p.projects__descr #{item.descr}
								h3.projects__title #{item.title}
								a(href="#").projects__more Смотреть кейс

	include ../sections/increase-section-light
	section.section.section_dark.service-section
		.container
			h2.text-black.text-white.deco-line Наши услуги
			ul.services
				each item in pages.projects.rate
